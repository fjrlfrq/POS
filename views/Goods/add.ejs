<%- include('../partials/header.ejs') %>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <%- include('../partials/sidebar.ejs') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <%- include('../partials/alert.ejs') %>

                        <!-- Page Heading -->
                        <h1 class="h3 mb-2 text-gray-800">Goods</h1>

                        <!-- DataTales Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header">
                                <h4>Form add</h4>
                            </div>
                            <div class="card-body">
                                <form class="user" action="" method="post" encType="multipart/form-data">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Barcode</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control form-control-user" id="barcodes"
                                                name="barcodes" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Name</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control form-control-user" id="names"
                                                name="names" placeholder="Name" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Stock</label>
                                        <div class="col-sm-10">
                                            <input type="number" class="form-control form-control-user" id="stocks"
                                                name="stocks" placeholder="0" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Purchase Price</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control form-control-user"
                                                id="purchaseprices" name="purchaseprices" placeholder="0" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Selling Price</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control form-control-user"
                                                id="sellingprices" name="sellingprices" placeholder="0" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Unit</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" id="units" name="units">
                                                <option selected disabled>Open this select menu</option>
                                                <!-- data foreach -->
                                                <% data.forEach(item=> {%>
                                                    <option value="<%= item.unit %>">
                                                        <%= item.unit %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row mb-3 ">
                                        <label for="picture" class="col-sm-2 col-form-label">Picture</label>
                                        <div class="col-sm-10">
                                            <div class="custom-file">
                                                <label class="custom-file-label" for="pictures">Choose file</label>
                                                <input type="file" class="custom-file-input" id="pictures" name="pictures">
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-bars"></i>
                                        </span>
                                        <span class="text">Save</span>
                                    </button>
                                    <a href="/goods" class="btn btn-warning btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-undo"></i>
                                        </span>
                                        <span class="text">Back</span>
                                    </a>
                                </form>
                            </div>
                        </div>

                </div>

                <%- include('../partials/logout.ejs') %>
        </div>

        <%- include('../partials/footer.ejs') %>